# Backend Configuration
NODE_ENV=production
PORT=8080

# Database
# Use absolute path for SQLite in production to avoid CWD issues
DATABASE_URL=file:/var/www/satelink/satelink.db

# Security
# CRITICAL: Generate a strong random string (e.g. `openssl rand -hex 32`)
JWT_SECRET=CHANGE_ME_TO_A_LONG_AGR_RANDOM_STRING
ADMIN_TOKEN=CHANGE_ME_TO_A_FALLBACK_ADMIN_TOKEN

# Web Configuration (Frontend)
# Point to the Nginx public URL
NEXT_PUBLIC_API_BASE_URL=https://beta.satelink.example.com
