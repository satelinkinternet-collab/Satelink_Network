<%- include('partials/header', { activePage: 'builder' }) %>
    <%- include('partials/drawer') %>

        <div class="mb-8 flex justify-between items-end">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">My Projects</h1>
                <p class="text-satelink-muted font-mono text-sm flex items-center">
                    <%- include('partials/icon', { name: 'wallet' , className: 'w-4 h-4 mr-1 text-slate-400' }) %>
                        <%= wallet %>
                </p>
            </div>
            <div class="flex space-x-3">
                <a href="/ui/builder/docs"
                    class="bg-white hover:bg-gray-50 text-gray-700 px-4 py-2 rounded-lg text-sm font-bold shadow-sm transition-colors flex items-center border border-satelink-border">
                    <%- include('partials/icon', { name: 'list-ul' , className: 'w-4 h-4 mr-2' }) %> Docs
                </a>
                <button onclick="openCreateModal()"
                    class="bg-satelink-accent hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-bold shadow-md shadow-blue-500/20 transition-all flex items-center">
                    <%- include('partials/icon', { name: 'plug' , className: 'w-4 h-4 mr-2' }) %> New Project
                </button>
            </div>
        </div>

        <!-- Projects Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="projects-grid">
            <!-- Populated by JS -->
            <div class="animate-pulse bg-white h-48 rounded-xl border border-gray-200"></div>
        </div>

        <!-- Create Modal -->
        <div id="create-modal"
            class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-50 hidden flex items-center justify-center fade-in">
            <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-2xl max-w-sm w-full mx-4">
                <h3 class="text-xl font-bold text-gray-900 mb-4">New Project</h3>
                <input type="text" id="new-project-name" placeholder="Project Name (e.g. My DeFi App)"
                    class="w-full bg-gray-50 border border-gray-300 rounded-lg px-4 py-2 text-gray-900 mb-4 focus:ring-2 focus:ring-satelink-accent focus:border-satelink-accent focus:outline-none placeholder-gray-400">
                <div class="flex justify-end space-x-2">
                    <button onclick="closeCreateModal()"
                        class="px-4 py-2 text-gray-500 hover:text-gray-900 font-medium">Cancel</button>
                    <button onclick="createProject()"
                        class="px-6 py-2 bg-satelink-accent text-white rounded-lg font-bold hover:bg-blue-700 shadow-sm">Create</button>
                </div>
            </div>
        </div>

        <script>
            async function loadProjects() {
                const grid = document.getElementById('projects-grid');
                try {
                    const res = await fetch('/builder/projects');
                    const projects = await res.json();

                    if (projects.length === 0) {
                        grid.innerHTML = `<div class="col-span-3 text-center py-12 text-satelink-muted border border-dashed border-gray-300 rounded-xl bg-gray-50">No projects yet. Create one to get started!</div>`;
                        return;
                    }

                    grid.innerHTML = projects.map(p => `
        <a href="/ui/builder/projects/${p.id}" class="block bg-white hover:bg-gray-50 border border-satelink-border hover:border-satelink-accent/50 rounded-xl p-6 transition-all group shadow-sm hover:shadow-md">
            <div class="flex justify-between items-start mb-4">
                <div class="w-10 h-10 rounded-lg bg-blue-50 flex items-center justify-center text-satelink-accent group-hover:scale-110 transition-transform">
                        <span class="font-bold text-lg">${p.name[0].toUpperCase()}</span>
                </div>
                <span class="px-2 py-0.5 rounded text-[10px] uppercase font-bold bg-emerald-50 text-emerald-600 border border-emerald-200">${p.status}</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-1 group-hover:text-satelink-accent transition-colors">${p.name}</h3>
            <p class="text-satelink-muted text-sm">Created ${new Date(p.created_at).toLocaleDateString()}</p>
        </a>
    `).join('');
                } catch (e) {
                    grid.innerHTML = `<div class="text-red-500 font-medium">Failed to load projects</div>`;
                }
            }

            function openCreateModal() { document.getElementById('create-modal').classList.remove('hidden'); }
            function closeCreateModal() { document.getElementById('create-modal').classList.add('hidden'); }

            async function createProject() {
                const name = document.getElementById('new-project-name').value;
                if (!name) return;

                await fetch('/builder/projects', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name })
                });
                closeCreateModal();
                loadProjects();
            }

            loadProjects();
        </script>

        <%- include('partials/footer') %>